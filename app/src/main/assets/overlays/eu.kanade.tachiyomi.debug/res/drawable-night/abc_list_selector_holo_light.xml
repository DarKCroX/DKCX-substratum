<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <corners
                android:topLeftRadius="8dp"
                android:topRightRadius="8dp" />
            <gradient

                android:endColor="#0000"
                android:startColor="@*eu.kanade.tachiyomi.debug:color/holo_blue_bright" />

        </shape>
    </item>
    <item
        android:bottom="0dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <gradient

                android:endColor="#0000"
                android:startColor="#bf1a1a1a" />
            <corners
                android:topLeftRadius="8dp"
                android:topRightRadius="8dp" />
        </shape>
    </item>

</layer-list><!-- usage: bottom navigation, tabs, ActionMode/bar -->