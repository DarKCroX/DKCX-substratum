<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--=============-->
    <!-- Dark Themes -->
    <!--=============-->
    <style name="Theme.Tachiyomi.Dark" parent="@*eu.kanade.tachiyomi.debug:style/Theme.Base.Dark">
        <item name="*android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="*android:statusBarColor">@*android:color/transparent</item>
        <item name="*android:navigationBarColor">@*android:color/transparent</item>
        <item name="*android:windowBackground">@*eu.kanade.tachiyomi.debug:color/md_grey_900_75</item>
        <item name="*android:colorBackgroundCacheHint">@null</item>
        <item name="*android:windowShowWallpaper">true</item>
        <item name="*android:colorBackground">#BF212121</item>
        <item name="*eu.kanade.tachiyomi.debug:colorPrimary">@*android:color/transparent</item>
        <item name="*eu.kanade.tachiyomi.debug:colorPrimaryDark">@*android:color/transparent</item>
        <item name="*eu.kanade.tachiyomi.debug:background_card">@*android:color/transparent</item>
        <item name="*eu.kanade.tachiyomi.debug:md_background_color">#BF212121</item>
        <item name="*eu.kanade.tachiyomi.debug:actionBarTheme">@*eu.kanade.tachiyomi.debug:style/ThemeOverlay.AppCompat.ActionBar</item>
    </style>

    <!--=================-->
    <!-- DarkBlue Themes -->
    <!--==================-->
    <style name="Theme.Tachiyomi.DarkBlue" parent="@*eu.kanade.tachiyomi.debug:style/Theme.Base.Dark">
        <item name="*eu.kanade.tachiyomi.debug:colorPrimary">@*eu.kanade.tachiyomi.debug:color/colorPrimary</item>
        <item name="*eu.kanade.tachiyomi.debug:colorPrimaryDark">@*eu.kanade.tachiyomi.debug:color/colorPrimaryDark</item>
        <item name="*android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="*android:statusBarColor">@*android:color/transparent</item>
        <item name="*android:navigationBarColor">@*eu.kanade.tachiyomi.debug:color/colorDarkPrimaryDark</item>
        <item name="@*eu.kanade.tachiyomi.debug:navigation_view_theme">@*eu.kanade.tachiyomi.debug:style/Theme.Widget.NavigationView</item>
    </style>

    <!--==============-->
    <!-- Amoled Theme -->
    <!--==============-->
    <style name="Theme.Tachiyomi.Amoled" parent="@*eu.kanade.tachiyomi.debug:style/Theme.Base.Amoled">
        <item name="@*android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="@*android:statusBarColor">@*android:color/transparent</item>
        <item name="@*android:navigationBarColor">@*android:color/transparent</item>
    </style>

    <!--==============-->
    <!-- Reader Theme -->
    <!--==============-->
    <style name="Theme.Base.Reader.Dark" parent="@*eu.kanade.tachiyomi.debug:style/Theme.Base.Dark">
        <item name="*eu.kanade.tachiyomi.debug:colorPrimary">@*eu.kanade.tachiyomi.debug:color/readerColorDarkPrimary</item>
        <item name="*eu.kanade.tachiyomi.debug:colorPrimaryDark">@*eu.kanade.tachiyomi.debug:color/readerColorDarkPrimaryDark</item>
        <item name="*android:colorBackground">@*android:color/black</item>
        <item name="*android:statusBarColor">@*eu.kanade.tachiyomi.debug:color/readerColorDarkPrimary</item>
        <item name="*android:navigationBarColor">@*eu.kanade.tachiyomi.debug:color/readerColorDarkPrimary</item>
        <item name="*android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.Base.Reader.Light" parent="@*eu.kanade.tachiyomi.debug:style/Theme.Base">
        <item name="*eu.kanade.tachiyomi.debug:colorPrimary">@*eu.kanade.tachiyomi.debug:color/readerColorDarkPrimary</item>
        <item name="*eu.kanade.tachiyomi.debug:colorPrimaryDark">@*eu.kanade.tachiyomi.debug:color/readerColorDarkPrimaryDark</item>
        <item name="*android:colorBackground">@*android:color/white</item>
        <item name="*android:statusBarColor">@*eu.kanade.tachiyomi.debug:color/readerColorDarkPrimary</item>
        <item name="*android:navigationBarColor">@*eu.kanade.tachiyomi.debug:color/readerColorDarkPrimary</item>
    </style>
</resources>