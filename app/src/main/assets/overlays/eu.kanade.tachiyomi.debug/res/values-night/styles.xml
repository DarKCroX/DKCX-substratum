<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--        // Default splash //-->
    <style name="Theme.Splash" parent="@*eu.kanade.tachiyomi.debug:style/Theme.Base.Dark">
        <item name="*android:windowBackground">@*eu.kanade.tachiyomi.debug:drawable/splash_background</item>
        <item name="*android:statusBarColor">@*eu.kanade.tachiyomi.debug:color/backgroundDark</item>
        <item name="*android:navigationBarColor">@*eu.kanade.tachiyomi.debug:color/backgroundDark</item>
        <item name="*eu.kanade.tachiyomi.debug:colorBackgroundSplash">@*eu.kanade.tachiyomi.debug:color/backgroundDark</item>
    </style>

    <!--        // Setting eg [General->Start screen dialog] //-->
    <style name="Theme.AlertDialog.Dark" parent="*eu.kanade.tachiyomi.debug:style/Theme.AlertDialog">
        <item name="*eu.kanade.tachiyomi.debug:colorSurface">@null</item> <!--// this //-->
        <item name="*android:windowBackground">#BF1a1a1a</item> <!--// this //-->
    </style>

    <!--        // History use CardView //-->
    <style name="Theme.Widget.CardView.Item" parent="@*eu.kanade.tachiyomi.debug:style/Theme.Widget.CardView">
        <item name="*android:layout_marginTop">@*eu.kanade.tachiyomi.debug:dimen/space_between_cards</item>
        <item name="*android:layout_marginBottom">@*eu.kanade.tachiyomi.debug:dimen/space_between_cards</item>

        <item name="*eu.kanade.tachiyomi.debug:cardBackgroundColor">@*eu.kanade.tachiyomi.debug:color/md_black_1000_12</item> <!--// this //-->
        <item name="*eu.kanade.tachiyomi.debug:cardElevation">0.0dip</item> <!--// this //-->
        <item name="*eu.kanade.tachiyomi.debug:cardCornerRadius">8.0dip</item> <!--// this //-->
    </style>

    <!--        // fix weird box at bottom navigation //-->
    <style name="Widget.Design.BottomNavigationView" parent="">
        <item name="*eu.kanade.tachiyomi.debug:elevation">0dp</item> <!--// this //-->

        <item name="*eu.kanade.tachiyomi.debug:enforceMaterialTheme">false</item>
        <item name="*eu.kanade.tachiyomi.debug:enforceTextAppearance">false</item>
        <item name="*eu.kanade.tachiyomi.debug:itemBackground">?*android:attr/selectableItemBackgroundBorderless</item>
        <item name="*eu.kanade.tachiyomi.debug:itemHorizontalTranslationEnabled">true</item>
        <item name="*eu.kanade.tachiyomi.debug:itemIconSize">@*eu.kanade.tachiyomi.debug:dimen/design_bottom_navigation_icon_size</item>
        <item name="*eu.kanade.tachiyomi.debug:labelVisibilityMode">auto</item>
    </style>

    <!--        // More/Less button for manga summary //-->
    <style name="Theme.Widget.Button.TextButton" parent="*eu.kanade.tachiyomi.debug:style/Widget.MaterialComponents.Button.TextButton">
        <item name="*android:textColor">@*eu.kanade.tachiyomi.debug:color/holo_blue_bright</item> <!--// this //-->
        <item name="*android:background">@*eu.kanade.tachiyomi.debug:drawable/abc_item_background_holo_light</item> <!--// this //-->

        <item name="*android:letterSpacing">0.0</item>
        <item name="*android:textAllCaps">false</item>
        <item name="*android:minHeight">0dp</item>
        <item name="*android:minWidth">0dp</item>
        <item name="*android:paddingTop">0dp</item>
        <item name="*android:paddingBottom">0dp</item>
        <item name="*android:insetTop">0dp</item>
        <item name="*android:insetBottom">0dp</item>
        <item name="*eu.kanade.tachiyomi.debug:backgroundTint">@null</item>
        <item name="*eu.kanade.tachiyomi.debug:rippleColor">@null</item>
    </style>

    <!--        // bottom navigation background //-->
    <style name="Widget.MaterialComponents.BottomNavigationView.Colored" parent="@*eu.kanade.tachiyomi.debug:style/Widget.MaterialComponents.BottomNavigationView">
        <item name="*android:background">@*eu.kanade.tachiyomi.debug:drawable/abc_list_selector_holo_light</item> <!--// this //-->

<!--        <item name="*eu.kanade.tachiyomi.debug:enforceMaterialTheme">true</item>-->
