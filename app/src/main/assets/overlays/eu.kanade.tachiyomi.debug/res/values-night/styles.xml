<!--        <item name="*eu.kanade.tachiyomi.debug:itemTextAppearanceActive">@*eu.kanade.tachiyomi.debug:attr/textAppearanceCaption</item>-->
<!--        <item name="*eu.kanade.tachiyomi.debug:itemTextAppearanceInactive">@*eu.kanade.tachiyomi.debug:attr/textAppearanceCaption</item>-->
<!--        <item name="*eu.kanade.tachiyomi.debug:itemTextColor">@*eu.kanade.tachiyomi.debug:color/mtrl_bottom_nav_colored_item_tint</item>-->
    </style>

    <!--        // Long tap on selection at Library/Chapter... ActionMode background  //-->
    <style name="Theme.ActionMode" parent="@*eu.kanade.tachiyomi.debug:style/Base.Widget.AppCompat.ActionMode">
        <item name="*eu.kanade.tachiyomi.debug:background">@*eu.kanade.tachiyomi.debug:drawable/abc_list_selector_background_transition_holo_light</item> <!--// this //-->
    </style>

    <!--        // Because hard to see tabs on sheet tabs... Tabs background //-->
    <style name="Theme.Widget.Tabs" parent="@*eu.kanade.tachiyomi.debug:style/Widget.MaterialComponents.TabLayout.Colored">
        <item name="*android:background">@*eu.kanade.tachiyomi.debug:drawable/abc_list_selector_background_transition_holo_light</item> <!--// this //-->

        <item name="*eu.kanade.tachiyomi.debug:tabGravity">center</item>
        <item name="*eu.kanade.tachiyomi.debug:tabIndicator">@*eu.kanade.tachiyomi.debug:drawable/tab_indicator</item>
        <item name="*eu.kanade.tachiyomi.debug:tabIndicatorColor">@*eu.kanade.tachiyomi.debug:color/holo_blue_bright</item>
        <item name="*eu.kanade.tachiyomi.debug:tabIndicatorFullWidth">false</item>
        <item name="*eu.kanade.tachiyomi.debug:tabIndicatorHeight">4dp</item>
        <item name="*eu.kanade.tachiyomi.debug:tabInlineLabel">true</item>
        <item name="*eu.kanade.tachiyomi.debug:tabMinWidth">75.0dip</item>
        <item name="*eu.kanade.tachiyomi.debug:tabMode">scrollable</item>
        <item name="*eu.kanade.tachiyomi.debug:tabTextAppearance">@*eu.kanade.tachiyomi.debug:style/TextAppearance.Widget.Tab</item>
        <item name="*eu.kanade.tachiyomi.debug:tabTextColor">@*eu.kanade.tachiyomi.debug:color/tabs_selector</item>
    </style>

    <!--        // Reader sheet smooth corner //-->
    <style name="ShapeAppearanceOverlay.MaterialComponents.BottomSheet" parent="">
        <item name="*eu.kanade.tachiyomi.debug:cornerSizeBottomLeft">0.0dip</item>
        <item name="*eu.kanade.tachiyomi.debug:cornerSizeBottomRight">0.0dip</item>
        <item name="*eu.kanade.tachiyomi.debug:cornerSizeTopLeft">18dp</item>
        <item name="*eu.kanade.tachiyomi.debug:cornerSizeTopRight">18dp</item>
    </style>
