<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.AlertDialog.Dark" parent="*eu.kanade.tachiyomi.debug:style/Theme.AlertDialog">
        <item name="*eu.kanade.tachiyomi.debug:colorSurface">@null</item>
        <item name="*android:windowBackground">#BF1a1a1a</item>
    </style>


    <style name="Theme.Widget.CardView" parent="@*eu.kanade.tachiyomi.debug:style/CardView">
        <item name="*android:padding">@*eu.kanade.tachiyomi.debug:dimen/material_component_cards_top_and_bottom_padding</item>
        <item name="*android:layout_width">fill_parent</item>
        <item name="*android:layout_height">wrap_content</item>
        <item name="*android:layout_marginTop">@*eu.kanade.tachiyomi.debug:dimen/material_component_cards_space_between_cards</item>
        <item name="*android:layout_marginBottom">@*eu.kanade.tachiyomi.debug:dimen/material_component_cards_space_between_cards</item>
        <item name="*android:layout_marginStart">@*eu.kanade.tachiyomi.debug:dimen/material_component_cards_space_between_cards</item>
        <item name="*android:layout_marginEnd">@*eu.kanade.tachiyomi.debug:dimen/material_component_cards_space_between_cards</item>
        <item name="*eu.kanade.tachiyomi.debug:cardBackgroundColor">@*eu.kanade.tachiyomi.debug:color/md_black_1000_12</item>
        <item name="*eu.kanade.tachiyomi.debug:cardElevation">0.0dip</item>
        <item name="*eu.kanade.tachiyomi.debug:cardCornerRadius">8.0dip</item>
    </style>


    <style name="Widget.Design.BottomNavigationView" parent="">
        <!--        weird box at bottom navigation-->
        <item name="*eu.kanade.tachiyomi.debug:elevation">1dp</item>
        <!--        weird box at bottom navigation-->
        <item name="*eu.kanade.tachiyomi.debug:enforceMaterialTheme">false</item>
        <item name="*eu.kanade.tachiyomi.debug:enforceTextAppearance">false</item>
        <item name="*eu.kanade.tachiyomi.debug:itemBackground">?*android:attr/selectableItemBackgroundBorderless</item>
        <item name="*eu.kanade.tachiyomi.debug:itemHorizontalTranslationEnabled">true</item>
        <item name="*eu.kanade.tachiyomi.debug:itemIconSize">@*eu.kanade.tachiyomi.debug:dimen/design_bottom_navigation_icon_size</item>
        <item name="*eu.kanade.tachiyomi.debug:labelVisibilityMode">auto</item>
    </style>


    <style name="Theme.Splash" parent="@*eu.kanade.tachiyomi.debug:style/Theme.Base.Dark">
        <item name="*android:windowBackground">@*eu.kanade.tachiyomi.debug:drawable/splash_background</item>
        <item name="*android:statusBarColor">@*eu.kanade.tachiyomi.debug:color/backgroundDark</item>
        <item name="*android:navigationBarColor">@*eu.kanade.tachiyomi.debug:color/backgroundDark</item>
        <item name="*eu.kanade.tachiyomi.debug:colorBackgroundSplash">@*eu.kanade.tachiyomi.debug:color/backgroundDark</item>
    </style>
